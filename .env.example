# ==================== 应用配置 ====================
APP_NAME="Laravel API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost
APP_LOCALE=zh_CN
APP_FALLBACK_LOCALE=en

# ==================== 数据库配置 ====================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

# ==================== Redis 配置 ====================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Redis 连接配置
REDIS_PREFIX=laravel-
REDIS_PERSISTENT=false
REDIS_MAX_RETRIES=3
REDIS_BACKOFF_ALGORITHM=decorrelated_jitter
REDIS_BACKOFF_BASE=100
REDIS_BACKOFF_CAP=1000

# ==================== 缓存配置 ====================
CACHE_STORE=redis
CACHE_PREFIX=laravel-cache-

# ==================== 队列配置 ====================
# 默认使用 RabbitMQ 作为队列驱动
QUEUE_CONNECTION=rabbitmq
QUEUE_DRIVER=rabbitmq

# Redis 队列配置（备用）
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE_PREFIX=queue:
REDIS_QUEUE_RETRY_AFTER=90

# RabbitMQ 队列配置（主要）
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=laravel-exchange
RABBITMQ_EXCHANGE_TYPE=direct
RABBITMQ_QUEUE=laravel-queue
RABBITMQ_QUEUE_DURABLE=true
RABBITMQ_QUEUE_AUTO_DELETE=false
RABBITMQ_PREFETCH_COUNT=1
RABBITMQ_HEARTBEAT=60
RABBITMQ_CONNECTION_TIMEOUT=10

# ==================== Session 配置 ====================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ==================== JWT 认证配置 ====================
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=30

# ==================== 日志配置 ====================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DAILY_DAYS=14

# ==================== 邮件配置 ====================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==================== 广播配置 ====================
BROADCAST_CONNECTION=log

# ==================== 文件系统配置 ====================
FILESYSTEM_DISK=local

# ==================== 性能监控配置 ====================
# 慢查询阈值（毫秒）
DB_SLOW_QUERY_THRESHOLD=100

# 单次请求查询数量阈值
DB_QUERY_COUNT_THRESHOLD=20

# 队列监控阈值
QUEUE_MONITOR_THRESHOLD=1000

# ==================== CORS 配置 ====================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=*
CORS_ALLOWED_HEADERS=*
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=false

# ==================== Horizon 配置 ====================
HORIZON_PREFIX=horizon:
HORIZON_MEMORY_LIMIT=64
HORIZON_BALANCE=simple

# ==================== 第三方服务配置 ====================
# Sentry（异常监控，可选）
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_ENABLED=false

# ==================== 其他配置 ====================
# Telescope（调试工具，可选）
TELESCOPE_ENABLED=false

# Vite 配置
VITE_APP_NAME="${APP_NAME}"
